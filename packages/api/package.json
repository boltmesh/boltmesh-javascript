{
  "name": "@boltmesh/api",
  "version": "0.0.0-alpha.9",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boltmesh/boltmesh-javascript.git",
    "directory": "packages/api"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react-query": {
      "import": "./dist/react-query.js",
      "types": "./dist/react-query.d.ts"
    },
    "./swr": {
      "import": "./dist/swr.js",
      "types": "./dist/swr.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup --entry src/index.ts --entry src/react-query.ts --entry src/swr.ts --format esm --clean && tsc --emitDeclarationOnly",
    "dev": "tsup --entry src/index.ts --entry src/react-query.ts --entry src/swr.ts --watch --format esm --clean && tsc --emitDeclarationOnly",
    "schema": "openapi-typescript https://api.boltmesh.com/spec.json -o ./src/schema.d.ts"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "openapi-fetch": "^0.14.0",
    "openapi-react-query": "^0.5.0",
    "openapi-typescript-helpers": "^0.0.15",
    "swr": "^2.3.3",
    "swr-openapi": "^5.3.0",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "@boltmesh/tsconfig": "workspace:*",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "catalog:",
    "openapi-typescript": "^7.8.0",
    "tsup": "catalog:"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
